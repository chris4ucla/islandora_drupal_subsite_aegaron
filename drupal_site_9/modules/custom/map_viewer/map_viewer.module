/**
 * Implements hook_help().
 */
function map_viewer_help($path, $arg) {
  switch ($path) {
    case 'admin/help#map_viewer':
      return t('<p>The map viewer creates a multi-map display that can be inserted into a block.</p>');
      break;
  }
}

